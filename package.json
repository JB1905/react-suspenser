{
  "name": "react-suspenser",
  "version": "0.0.0",
  "description": "Easier management of the lazy loading process",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-suspenser.cjs.js",
  "module": "lib/react-suspenser.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-suspenser.git"
  },
  "keywords": [
    "react",
    "lazy",
    "loading",
    "suspense",
    "dynamic",
    "import",
    "modules"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-suspenser/issues"
  },
  "homepage": "https://github.com/JB1905/react-suspenser#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.53",
    "@types/react-router": "^5.1.8",
    "@typescript-eslint/parser": "^4.4.1",
    "cz-conventional-changelog": "3.3.0",
    "cz-emoji": "^1.2.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.14.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.28.0",
    "semantic-release": "^17.2.3",
    "semantic-release-gitmoji": "^1.3.4",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}

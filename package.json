{
  "name": "react-suspenser",
  "version": "1.1.6",
  "description": "Easier management of the lazy loading process",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-suspenser.cjs.js",
  "module": "lib/react-suspenser.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "yarn prettier && yarn lint && yarn build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "prebuild": "yarn clean",
    "test": "jest --coverage",
    "watch": "yarn build -- --watch",
    "watch:test": "yarn test -- --watch",
    "lint": "eslint 'src/**/*.{tsx,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-suspenser.git"
  },
  "keywords": [
    "react",
    "modules",
    "dynamic",
    "lazy",
    "loading",
    "import",
    "suspense"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-suspenser/issues"
  },
  "homepage": "https://github.com/JB1905/react-suspenser#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^28.1.2",
    "@types/react": "^17.0.38",
    "@typescript-eslint/parser": "^5.28.0",
    "cz-conventional-changelog": "3.3.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.75.6",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "semantic-release": "^19.0.3",
    "semantic-release-gitmoji": "^1.4.4",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "yarn prettier",
      "yarn lint"
    ]
  }
}
